{% if style.readonly or grid %}
    <div class="py-2">{{ data[style.name]|u.trim().replaceMatches('/\\s+/', ' ').truncate(23, '...') }}</div>
{% else %}
    <textarea class="form-control"{% if style.disabled %} disabled{% endif %} name="{{ style.name }}" placeholder="{{ style.placeholder ?: i18n(style.i18n ~ '.placeholder', '') }}" rows="5">{{ data[style.name] }}</textarea>
{% endif %}
