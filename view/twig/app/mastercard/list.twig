{% extends 'app-layout.twig' %}

{% block content %}
    <div class="card">
        <div class="card-body p-2">
            <table class="table table-hover table-responsive table-striped">
                <thead>
                    <tr>
                        <th class="w-1">{# 卡號 #}{{ label('table/MasterCard.card_number') }}</th>
                        <th class="w-1">{# 餘額 #}{{ label('table/MasterCard.balance') }}</th>
                        <th class="w-1">{# 狀態 #}{{ label('table/MasterCard.status') }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for card in result.cards %}
                        <tr>
                            <td>{{ card.card_number }}</td>
                            <td>{{ card.currency }}{{ card.balance }}</td>
                            <td>{{ label('options/mastercard-status.' ~ card.status) }}</td>
                        </tr>
                    {% endfor %}
                    {% if not result.cards %}
                        <tr><td class="text-center" colspan="3">{# 尚無卡片資料 #}{{ label('lang.mastercard.not_found') }}</td></tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
