{% extends 'backend/response.twig' %}

{% set parameters, path = form|merge({confirm: 1}), controller.path[1:] %}

{% block target %}.modal-wrapper{% endblock %}

{% block html %}
    <div class="fade modal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">{{ label('app.confirm.' ~ path ~ '.title') }}</h4>
                    <button class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>{{ label('app.confirm.' ~ path ~ '.message') }}</p>
                </div>
                <div class="justify-content-between modal-footer">
                    <button class="btn btn-default" data-dismiss="modal">{# 取消 #}{{ label('app.cancel') }}</button>
                    <button class="btn btn-primary" data-submit>{# 確認 #}{{ label('app.confirm') }}</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block postprocess %}
    var modal = $(".modal-wrapper .modal").modal();

    modal.on("hidden.bs.modal", function () {
        if (modal.data("submit")) {
            perform("{{ path }}", {{ parameters|json_encode|raw }});
        }

        modal.remove();
    });

    modal.find("[data-submit]").focus().on("click", function () {
        modal.data("submit", true).modal("hide");
    });
{% endblock %}
