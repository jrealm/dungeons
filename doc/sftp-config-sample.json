{
    "type": "sftp",

    "save_before_upload": true,
    "upload_on_save": true,
    "sync_down_on_open": false,
    "sync_skip_deletes": false,
    "sync_same_age": true,
    "confirm_downloads": false,
    "confirm_sync": false,
    "confirm_overwrite_newer": false,

    "host": "sample.com",
    "user": "sample",
    "port": 22,

    "remote_path": "/the/path/to/project/",

    "ignore_regexes": [
        "/(.gitignore|.htaccess|composer.lock|config-sample.php)",
        "/(data|logs|vendor)/",
        "/www/(.htaccess|index.php)",
        "/www/(adminlte|backend|bootstrap|cn|css/img|en|files|tw|vn)/",
        "/www/css/(dungeons|label-editor|overlay).css",
        "/www/js/(dungeons|jquery-qrcode.min|label-editor).js",
        "\\.sublime-(project|workspace)", "sftp-config(-alt\\d?)?\\.json",
        "sftp-settings\\.json", "/venv/", "\\.svn/", "\\.hg/", "\\.git/",
        "\\.bzr", "_darcs", "CVS", "\\.DS_Store", "Thumbs\\.db", "desktop\\.ini"
    ],

    "connect_timeout": 30,
}
